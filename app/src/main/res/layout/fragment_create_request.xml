<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.CreateRequestFragment"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pateikite užklausą visais dominančiais klausimais"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".2"
        app:layout_constraintBottom_toTopOf="@id/editTextRequestContainer"
        ></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextRequestContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/editTextPhoneContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".2"
        android:hint="Aprašymas"
        app:counterEnabled="true"
        app:counterMaxLength="2000"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextRequestCreation"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:autoSizeTextType="uniform"
            android:hint="Aprašymas"
            android:inputType="textMultiLine"
            android:maxLines="8"
            android:minLines="3" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextPhoneContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:hint="Telefono numeris"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@id/editTextRequestContainer">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"
            android:hint="Tel.nr"
            android:inputType="phone" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAddNewRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Išsiųsti"
        app:layout_constraintStart_toStartOf="@id/editTextPhoneContainer"
        app:layout_constraintTop_toBottomOf="@id/editTextPhoneContainer"
        app:layout_constraintEnd_toEndOf="@id/editTextPhoneContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>