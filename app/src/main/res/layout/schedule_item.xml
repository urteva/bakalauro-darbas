<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white2"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/scheduleItemType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Darbotvarke"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scheduleItemDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Darbotvarke"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scheduleItemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11/8/2023"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/scheduleItemDetails"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#D10B0B"
            />

        <TextView
            android:id="@+id/Scheduletime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:inputType="time"
            app:layout_constraintLeft_toRightOf="@id/scheduleItemDate"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/scheduleItemDate"
            tools:layout_editor_absoluteX="193dp"
            tools:layout_editor_absoluteY="64dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>